<div class="row">
  <div class="col s6">
    <%= form_with(model: [@listing, order], local: true) do |form| %> 
      <div id="errors">
        <% if order.errors.any? %>
            <% errors = "" %>

            <% order.errors.full_messages.each do |message| %>
              <%  errors = errors + message + "<br>" %>
            <% end %>

            <%= javascript_tag "M.toast({html: \"#{errors}\", classes: 'toast-error', displayLength: '40000'})" %>
          
        <% end %>
        </div>

        <div class="field">
          <%= form.label :address %>
          <%= form.text_field :address %>
        </div>

        <div class="field">
          <%= form.label :city %>
          <%= form.text_field :city %>
        </div>

        <div class="field">
          <%= form.label :state %>
          <%= form.text_field :state %>
        </div>

        <div class="actions">
        <%= form.submit %>
        </div>
    <% end %>
  </div>
  <div class="col s6">
    <p><b><%= @listing.name %></b></p>
    <p><%= "Sold by #{@listing.user.first_name} #{@listing.user.last_name}" %></p>
    <p><strong><%= number_to_currency(@listing.price) %></strong></p>
    <%= render "listings/images_carousel" %>
  </div>
</div>