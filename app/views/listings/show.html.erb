
<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col s6">
		<%= render "images_carousel" %>
	</div>
	<div class="col s6">
  		<p><b><%= @listing.name %></b></p>
  		<p><strong><%= @listing.price %></strong></p>
	</div>
	<div class="col s6">
		<p><%= "Sold by #{@listing.user.first_name} #{@listing.user.last_name}" %></p>
	</div>
	<div class="col s6">
		<%= link_to edit_listing_path(@listing) do%>
			<i class="material-icons prefix">edit</i>
		<% end %>
		<%= link_to listings_path do%>
			<i class="material-icons prefix">list</i>
		<% end %>
		<%= link_to @listing, method: :delete, data: { confirm: 'Are you sure?' } do%>
			<i class="material-icons prefix">delete</i>
		<% end %>
	</div>
	<div class="col s12">
		<%= @listing.description %>
	</div>
</div>

